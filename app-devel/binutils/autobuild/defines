PKGNAME=binutils
PKGSEC=devel
PKGDEP="glibc zlib"
PKGDES="A set of programs to assemble and manipulate binaries and object files"
# diagnostics.h moved from gdb to binutils
PKGBREAK="gdb<=12.1-2"
PKGREP="gdb<=12.1-2"

NOSTATIC=0
NOLTO=1
AB_FLAGS_O3=1

AUTOTOOLS_AFTER=(
    '--prefix=/usr'
    '--sysconfdir=/etc'
    '--with-lib-path=/usr/lib'
    '--with-bugurl=https://github.com/AOSC-Dev/aosc-os-abbs/issues'
    '--enable-threads'
    '--enable-shared'
    '--with-pic'
    '--enable-ld'
    '--enable-plugins'
    '--disable-werror'
    '--enable-lto'
    '--disable-gdb'
    '--disable-gdbserver'
    '--enable-deterministic-archives'
    '--enable-64-bit-bfd'
    '--enable-targets=all'
)
AUTOTOOLS_AFTER__LOONGSON3=(
    "${AUTOTOOLS_AFTER}"
    '--enable-mips-fix-loongson3-llsc'
)

# Note: Since 2.44, we ship Binutils with all targets enabled.
PKGBREAK="""
binutils+cross-amd64
binutils+cross-arm64
binutils+cross-loongarch64
binutils+cross-loongson3
binutils+cross-mips64r6el
binutils+cross-powerpc
binutils+cross-ppc64
binutils+cross-ppc64el
binutils+cross-riscv64
"""
PKGREP="${PKGBREAK}"
