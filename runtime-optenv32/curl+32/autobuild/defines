PKGNAME=curl+32
PKGSEC=utils
PKGDEP="aosc-aaa+32 ca-certs gnutls+32 krb5+32 libssh2+32 openssl+32 rtmpdump+32 zlib+32"
BUILDDEP="devel-base+32 patchelf"
PKGDES="A URL retrieval utility and library (32-bit x86 runtime)"

ABHOST=optenv32

# FIXME: Missing 32-bit packages for some dependencies.
AUTOTOOLS_AFTER=(
    '--mandir=/opt/32/share/man'
    '--disable-ldap'
    '--disable-ldaps'
    '--enable-ipv6'
    '--enable-manual'
    '--enable-threaded-resolver'
    '--with-gssapi'
    '--with-libidn2'
    '--with-libssh2'
    '--without-brotli'
    '--with-librtmp'
    '--without-libpsl'
    '--with-random=/dev/urandom'
    '--with-ca-bundle=/etc/ssl/ca-bundle.crt'
)
