    '--without-p11-kit'
    '--with-default-trust-store-file=/etc/ssl/ca-bundle.crt'
    '--without-tpm'
    '--with-included-unistring'
    '--disable-tools'
    '--without-idn'
    '--without-tpm'
    '--without-tpm2'
    'PYTHON=/usr/bin/python3'
)

